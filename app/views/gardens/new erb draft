<h1>Build your garden! </h1>
<%= form_for @garden do |f| %>
    <%= f.hidden_field :user_id %>
    <%= f.label :address %>
    <%= f.text_field :address %>
    <br><br>
    <%= f.fields_for :plants, @garden.plants.build do |plant_fields| %>
        <%= plant_fields.label "Plant name" %>
        <%= plant_fields.text_field :name %>
        <br><br>
        <%= plant_fields.label "Plant Description" %>
        <%= plant_fields.text_field :description %>
    <% end %>
    <br><br>
    <%= f.fields_for :plots, @garden.plots.build do |plot_fields| %>
        <%= plot_fields.label "type of vegetation" %>
        <%= plot_fields.text_field :vegetation_type %>
        <% end %>
    <br><br>
    <%= f.submit "Create Garden" %>
    <% end %>


    FOR CONTROLLER: 
    
    def garden_params
    params.require(:garden).permit(:user_id, :address, plants_attributes: [:name, :description], plots_attributes: [:vegetation_type])    
end